NAME = libftprintf.a

SOURCES = $(filter-out main.c, $(wildcard *.c))

OBJECTS = $(SOURCES:.c=.o)

COMP = cc

COMP_FLAGS = -Wall -Wextra -Werror -fsanitize=undefined	 -g3

all: $(NAME)

$(NAME): $(OBJECTS)
	ar rcs $(NAME) $(OBJECTS)

%.o: %.c
	$(COMP) $(COMP_FLAGS) -o $@ -c $<

fclean: clean
	rm -f $(NAME)

clean:
	rm -f $(OBJECTS)

re: fclean all

ninja_rule: $(OBJECTS)
	$(COMP) $(COMP_FLAGS) $(OBJECTS) main.c -o ninja

ninja_exe: ninja_rule
	./ninja || true

ninja_exe_rm: ninja_exe
	$(MAKE) ninja_rm

ninja_rm: fclean
	rm -rf ninja

.PHONY: fclean all clean re ninjad rninja ninjax
